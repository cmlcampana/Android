<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo">


    <ImageView
        android:id="@+id/imagemLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/logo" />

    <EditText
        android:id="@+id/edtAnotacoesId"
        android:layout_width="320dp"
        android:layout_height="360dp"
        android:layout_alignLeft="@+id/imagemLogo"
        android:layout_alignStart="@+id/imagemLogo"
        android:layout_below="@+id/imagemLogo"
        android:background="@drawable/fundo_anotacao"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:gravity="start"
        android:textColor="#41342e"
        android:textSize="30sp"
        android:inputType="textMultiLine"
        />

    <ImageView
        android:id="@+id/botaoSalvarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtAnotacoesId"
        android:layout_centerHorizontal="true"
        android:background="@drawable/botao_salvar" />
</RelativeLayout>
