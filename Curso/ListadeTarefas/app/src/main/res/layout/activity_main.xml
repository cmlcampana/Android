<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/textoTarefaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/botaoAdicionarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textoTarefaId"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/textoTarefaId"
        android:layout_toRightOf="@+id/textoTarefaId"
        android:text="Adicionar" />

    <ListView
        android:id="@+id/listaId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textoTarefaId"
        android:layout_margin="20dp" />
</RelativeLayout>
